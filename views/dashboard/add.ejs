<!-- views/dashboard/add.ejs  (agora é formulário de VAGA) -->
<div class="add-note-wrapper">
  <nav class="breadcrumb-nav">
    <ul class="breadcrumb-list">
      <li><a href="/dashboard">Painel</a></li>
      <li>Publicar Vaga</li>
    </ul>
  </nav>

  <div class="note-header">
    <h1>Publicar Nova Vaga</h1>
  </div>

  <!-- action aponta para a rota de vagas -->
  <form action="/dashboard/add-job" method="POST" class="job-form">
    <div class="form-group">
      <label for="jobTitle">Título da Vaga</label>
      <input type="text" id="jobTitle" name="jobTitle" class="form-input" placeholder="Ex: Desenvolvedor Front-end Sênior" required>
    </div>

    <div class="form-group">
      <label for="companyName">Empresa</label>
      <input type="text" id="companyName" name="companyName" class="form-input" placeholder="Ex: Tech Solutions Ltda." required>
    </div>

    <div class="form-group">
      <label for="location">Localização</label>
      <input type="text" id="location" name="location" class="form-input" placeholder="Ex: São Paulo, SP ou Remoto" required>
    </div>

    <div class="form-group">
      <label for="jobType">Tipo de Vaga</label>
      <select id="jobType" name="jobType" class="form-input" required>
        <option value="">Selecione o tipo de vaga</option>
        <option value="full-time">Tempo Integral</option>
        <option value="part-time">Meio Período</option>
        <option value="internship">Estágio</option>
        <option value="freelance">Freelancer</option>
        <option value="contract">Contrato</option>
      </select>
    </div>

    <div class="form-group">
      <label for="experienceLevel">Nível de Experiência</label>
      <select id="experienceLevel" name="experienceLevel" class="form-input">
        <option value="">Selecione o nível</option>
        <option value="intern">Estagiário</option>
        <option value="junior">Júnior</option>
        <option value="mid">Pleno</option>
        <option value="senior">Sênior</option>
        <option value="lead">Líder</option>
      </select>
    </div>

    <div class="form-group">
      <label for="salary">Salário (Opcional)</label>
      <input type="text" id="salary" name="salary" class="form-input" placeholder="Ex: R$ 3.000 - R$ 5.000 ou A combinar">
    </div>

    <div class="form-group">
      <label for="jobDescription">Descrição da Vaga</label>
      <textarea id="jobDescription" name="jobDescription" class="form-input textarea-height" placeholder="Descreva os requisitos, responsabilidades e benefícios..." rows="12" required></textarea>
    </div>

    <button type="submit" class="btn-primary-form">Publicar Vaga</button>
  </form>
</div>