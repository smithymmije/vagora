

<div class="dashboard-wrapper">
  <header class="dashboard-header">
    <h1>Olá, <%= userName %></h1>
    <a href="/dashboard/add-job" class="btn-add">+ Criar Vaga</a>
  </header>

  <h2 class="section-title">💼 Minhas Vagas Publicadas</h2>

  <section class="notes-grid">
    <% if (vagas && vagas.length > 0) { %>
      <% vagas.forEach(vaga => { %>
        <div class="note-card">
          <h5><%= vaga.jobTitle %></h5>
          <p><strong>Empresa:</strong> <%= vaga.companyName %></p>
          <p><strong>Local:</strong> <%= vaga.location %></p>
          <p><strong>Tipo:</strong> <%= vaga.jobType %></p>
          <p><strong>Nível:</strong> <%= vaga.experienceLevel %></p>
          <% if (vaga.salary && vaga.salary.length > 0) { %>
            <p><strong>Salário:</strong> <%= vaga.salary %></p>
          <% } %>
          <p class="description"><%= vaga.jobDescription %></p>
          <p class="card-meta">🕒 Criada em <%= new Date(vaga.createdAt).toLocaleDateString() %></p>

          <div class="action-buttons">
            <a href="/dashboard/job/<%= vaga._id %>" class="btn">👁️ Ver</a>
            <a href="/dashboard/job-delete/<%= vaga._id %>" class="btn danger">🗑️ Excluir</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="empty-state">
        <h2>Você ainda não publicou nenhuma vaga.</h2>
        <p>Crie sua primeira oportunidade para candidatos encontrarem!</p>
        <a href="/dashboard/add-job" class="btn-start">Criar Vaga</a>
      </div>
    <% } %>
  </section>
</div>
